<h1>Pets</h1>

<%= link_to "Add pet", new_pet_path %>

<% @pets.each do |pet| %>
  <%= link_to pet_path(pet) do %>
    <h2><%= pet.name %></h2>
    <div><%= pet.address %></div>
    <div><%= pet.species %></div>

    <%= link_to "Delete", pet_path(pet), data: { turbo_method: :delete } %>
  <% end %>
<% end %>